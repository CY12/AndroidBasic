<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".textviw.TextViewActivity">

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_simple"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="200dp"
      android:gravity="center"
      android:text="你好"
      app:corners="30dp"
      app:solidColor="#00BCD4" />

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_change_corner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_simple"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="70dp"
      android:padding="10dp"
      android:text="改变圆角"
      app:corners="10dp"
      app:solidColor="#FFEB3B" />

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_change_stroke"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_change_corner"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:padding="10dp"
      android:text="改变边框"
      app:corners="20dp"
      app:strokeColor="#8BC34A"
      app:strokeWidth="1dp"
      app:solidColor="#FFEB3B" />

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_change_background"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_change_stroke"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:padding="10dp"
      android:text="改变背景"
      app:corners="10dp"
      app:endColor="#333333"
      app:gradientOrientation="TL_BR"
      app:startColor="#8F8D8D"
      app:strokeColor="#2C3943"
      app:strokeWidth="1dp" />

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_change_background_color"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_change_background"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:padding="10dp"
      android:text="改变背景渐变"
      app:corners="10dp"
      app:solidColor="#FFEB3B" />

  <com.example.space.textviw.KKTextView
      android:id="@+id/tv_change_orientation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tv_change_background_color"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:padding="10dp"
      android:text="改变渐变角度"
      app:corners="10dp"
      app:solidColor="#FFEB3B" />







</RelativeLayout>