<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addview.AddViewActivity"
    android:id="@+id/rl_all"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_linear"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FA9999"
        android:orientation="horizontal">


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:background="#FBE8E8">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true" >
        <TextView
            android:id="@+id/tv_add_child"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="addView(child)"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#00BCD4"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_add_params"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#2196F3"

            android:textSize="20dp"
            android:text="addView(child,layoutParams)"/>
    </LinearLayout>

</RelativeLayout>