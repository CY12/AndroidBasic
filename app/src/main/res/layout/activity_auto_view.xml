<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".autoview.AutoViewActivity">
    <LinearLayout
        android:id="@+id/ll_popup"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFAAA4"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/tv_start_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:textSize="20dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/ll_test"

        android:layout_marginTop="400dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#000"
        android:orientation="horizontal" />
    
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_shadow"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        />

    <com.example.space.view.ShadowView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:containerCornerRadius="5dp"
        app:containerDeltaLength="5dp"
        app:containerShadowColor="#26D6D6D6"
        app:containerShadowRadius="5dp">
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shape_5"
            />

    </com.example.space.view.ShadowView>
    <RelativeLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#009688"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E91E63"/>

    </RelativeLayout>

    <com.example.space.view.MyLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        >
        <com.example.space.view.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈"
            />
    </com.example.space.view.MyLinearLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        />
</RelativeLayout>